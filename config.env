# 環境の設定 (development / production)
ENV=development

# Flask の開発/本番/テストモード
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_DEBUG_test=0

# Flask のホスト & ポート設定
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_PORT_development=5001
FLASK_PORT_production=5001

# MySQL の設定
DB_HOST=localhost
DB_USER=flask_user
DB_PASSWORD=password
DB_NAME=mydb
DB_PORT=3306
DB_PORT=3306

# 本番環境 (AWS RDS)
DB_HOST_production=my-rds-instance.rds.amazonaws.com
DB_USER_production=admin
DB_PASSWORD_production=securepassword
DB_NAME_production=mydb
DB_PORT_production=3306

# テスト用 MySQL
DB_HOST_test=mysql_test
DB_USER_test=flask_user
DB_PASSWORD_test=password
DB_NAME_test=test_db
DB_PORT_test=3307

# DynamoDB の設定
DYNAMODB_ENDPOINT=http://dynamodb-local:8000
DYNAMODB_TABLE=SpeechAnalysis
AWS_REGION=us-east-1

# React の環境変数
REACT_APP_API_URL=http://localhost:5001
